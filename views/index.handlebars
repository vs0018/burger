<h1>Eat-Da-Burger!</h1>

<div class="burgerImg">
  <img src="/assets/img/free-hamburger-icon-25.jpg">
</div>

<div class="burgerDiv">
  <ul class="uneaten">
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/unless}}
    {{/each}}
  </ul>

  <ul class="eaten">
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class="formDiv">
  <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
        <button type="submit">Add Burger</button>
      </div>
    </form>
</div>